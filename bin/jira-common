#!/bin/bash

new_ticket_text="-> Create new ticket"
jira_branch_map=~/.cache/jira-branch-associations

touch "$jira_branch_map"

# Helpers for colored text
colored_text() {
    color=$1
    shift
    echo -e "\e[${color}m\c"
    echo "$@"
    echo -e "\e[0m\c"
};

red() { colored_text 31 $@; }
green() { colored_text 32 $@; }
yellow() { colored_text 33 $@; }
